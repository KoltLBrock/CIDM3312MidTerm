@model LoginViewModel
@{
    ViewData["Title"] = "Create Account Page";
}
<p>@ViewData["Title"]</p>
<form class="form-horizontal" asp-action="AddNewUser" method="POST">
    <div asp-validation-summary="All"></div>
<fieldset>

<!-- Form Name -->
<legend>Create New Login Information</legend>

<!-- Text input-->
<div class="form-group">
  <div class="col-md-4">
  <input asp-for="userName" placeholder="Username" class="form-control input-md" type="text">
    
  </div>
</div>

<!-- Password input-->
<div class="form-group">
  <div class="col-md-4">
    <input asp-for="password" placeholder="Password" class="form-control input-md" type="password">
    
  </div>
</div>
<!-- Button -->
<div class="form-group">
  <div class="col-md-4">
    <button type="submit" class="btn btn-primary">Create Account</button>
  </div>
</div>

</fieldset>
</form>